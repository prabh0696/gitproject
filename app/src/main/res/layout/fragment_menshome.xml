<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menshome">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="-2dp">
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:src="@drawable/mens1"
            android:id="@+id/slide">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="0dp">

            <ImageView
                android:id="@+id/slidee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/mens2"></ImageView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="-35dp">

        <ImageView
            android:id="@+id/slideeu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mens3"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="-22dp">

        <ImageView
            android:id="@+id/slideeuu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mens4"></ImageView>
    </LinearLayout>

</LinearLayout>